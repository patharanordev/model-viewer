{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": []
}